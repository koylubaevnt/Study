<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="76dp"
    android:layout_height="76dp" >

    <ImageView
        android:id="@+id/iv_dispenser_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/circle_vector"
        />

    <TextView
        android:id="@+id/tv_dispenser_num"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="32dp"
        tools:text="1"/>


    <ProgressBar
        android:id="@+id/pb_dispenser_indeterminate"
        style="?android:attr/progressBarStyle"
        android:theme="@style/CustomProgressbar"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:indeterminate="false"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress_circle_indeterminate"
        android:visibility="invisible"/>

    <ProgressBar

        android:id="@+id/pb_dispenser_determinate"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/progress_circle"
        android:secondaryProgress="100"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/iv_dispenser_is_my"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/content_description_check"
        app:srcCompat="@mipmap/check_circle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        />

</RelativeLayout>